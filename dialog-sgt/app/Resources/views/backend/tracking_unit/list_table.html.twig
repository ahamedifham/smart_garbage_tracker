{% trans_default_domain "backend" %}

{#<script type="text/javascript" src="{{ asset('backend/assets/javascripts/maps/map_ui_handle_base.js') }}"></script>#}

<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            {#<a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>#}
            {#<a href="#" class="p.anel-action panel-action-dismiss" data-panel-dismiss></a>#}
        </div>

        <h2 class="panel-title">{% trans %}tracker_info{% endtrans %}</h2>
    </header>
    <div class="panel-body">
        <table class="table table-bordered table-striped mb-none" id="datatable-default">
            <thead>
            <tr>
                <th>{% trans %}tracker_info_tracker_id{% endtrans %}</th>
                <th>{% trans %}tracker_info_vehicle{% endtrans %}</th>
                <th>{% trans %}tracker_info_driver{% endtrans %}</th>
                <th>{% trans %}action_list{% endtrans %}</th>
            </tr>
            </thead>
            <tbody>
            {% for record in list %}
            <tr data-id = {{ record.id }}>
                <td>{{ record.msisdn }}</td>
                <td>{{ record.vehicle }}</td>
                <td>{{ record.driver }}</td>
                <td>
                    <a href="{{ url('app_dashboard_view_single_truck_location',{id:record.id}) }}" class="btn btn-default btn-sm btn-map" style="max-height: 50px; min-width: 70px;">
                        <i class="glyphicon glyphicon-map-marker"></i> {% trans %}Map{% endtrans %}</a>
                    <a href="{{ url('app_tracking_unit_edit',{id: record.id}) }}" class="btn btn-default btn-sm" style="max-height: 50px; min-width: 70px;">
                        <i class="fa fa-edit"></i> {% trans %}edit{% endtrans %}</a>
                    <a href="{{ url('app_tracking_unit_delete',{id: record.id}) }}" class="btn btn-default btn-sm" style="max-height: 50px; min-width: 70px;">
                        <i class="fa fa-close"></i> {% trans %}delete{% endtrans %}</a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</section>

