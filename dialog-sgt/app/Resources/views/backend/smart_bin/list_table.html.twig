{% trans_default_domain "backend" %}
<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            {#<a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>#}
            {#<a href="#" class="panel-action panel-action-dismiss" data-panel-dismiss></a>#}
        </div>

        <h2 class="panel-title">{% trans %}smart_bin_list{% endtrans %}</h2>
    </header>
    <div class="panel-body">
        <table class="table table-bordered table-striped mb-none" id="datatable-default">
            <thead>
            <tr>
                <th>{% trans %}smart_bin_info_smart_bin_serial{% endtrans %}</th>
                <th>{% trans %}smart_bin_info_smart_bin_route{% endtrans %}</th>
                <th>{% trans %}smart_bin_info_smart_bin_bin_user{% endtrans %}</th>
                {#<th>{% trans %}smart_bin_info_smart_bin_bin_user_email{% endtrans %}</th>#}
                <th>{% trans %}smart_bin_info_smart_bin_bin_user_mobile_one{% endtrans %}</th>
                <th>{% trans %}smart_bin_info_smart_bin_bin_user_mobile_two{% endtrans %}</th>
                <th>{% trans %}smart_bin_info_smart_bin_bin_user_mobile_three{% endtrans %}</th>
                {#<th>{% trans %}smart_bin_info_smart_bin_bin_point_lat{% endtrans %}</th>#}
                {#<th>{% trans %}smart_bin_info_smart_bin_bin_point_lng{% endtrans %}</th>#}
                <th>{% trans %}smart_bin_info_smart_bin_bin_user_address{% endtrans %}</th>
                <th>{% trans %}smart_bin_info_smart_bin_bin_description{% endtrans %}</th>
                <th>{% trans %}action_list{% endtrans %}</th>
            </tr>
            </thead>
            <tbody>
            {% for record in list %}
                <tr data-id = {{ record.id }}>
                    <td>{{ record.serial }}</td>
                    <td>{{ record.route}}</td>
                    <td>{{ record.user }}</td>
                    {#<td>{{ record.userEmail }}</td>#}
                    <td>{{ record.userMobileOne }}</td>
                    <td>{{ record.userMobileTwo }}</td>
                    <td>{{ record.userMobileThree }}</td>
                    {#<td>{{ record.smartBinPointLat }}</td>#}
                    {#<td>{{ record.smartBinPointLng }}</td>#}
                    <td>{{ record.userAddress }}</td>
                    <td>{{ record.description }}</td>
                    <td>
                        <a class="mb-xs mt-xs mr-xs modal-sizes btn btn-default map_button btn-sm map-btn"  href="#mapModal" style="max-height: 50px; min-width: 70px;">
                            <i class="glyphicon glyphicon-map-marker"></i> Map</a>
                        <a href="{{ url('app_smart_bin_edit',{id: record.id}) }}"class="btn btn-default btn-sm" style="max-height: 50px; min-width: 70px;">
                            <i class="fa fa-edit"> </i> {% trans %} edit{% endtrans %}</a>
                        <a href="{{ url('app_smart_bin_delete',{id: record.id}) }}"class="btn btn-default btn-sm" style="max-height: 50px; min-width: 70px;">
                            <i class="fa fa-close"> </i> {% trans %} delete{% endtrans %}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
</section>

<div id="mapModal" class="modal-block modal-block-full mfp-hide">
    <section class="panel">
        <header class="panel-heading">
            <h2 class="panel-title">
                Map Panel

                <div class="btn-group pull-right">
                    {#<button type="button" class="btn btn-default btn-hover-me button:active menu_toolbar_tool start_point" data-tool-name="startPoint">#}
                        {#<img src="{{ asset('backend/assets/images/maps/startpoint.png') }}" style="height:20px;width:20px;"> Start Point</button>#}
                    {#<button type="button" class="btn btn-default btn-hover-me menu_toolbar_tool collection_point" data-tool-name="collectionPoint">#}
                        {#<img src="{{ asset('backend/assets/images/maps/pinPoint.png') }}" style="height:20px;width:20px;"> Pin Point</button>#}
                    {#<button type="button" class="btn btn-default btn-hover-me menu_toolbar_tool end_point" data-tool-name="endPoint">#}
                        {#<img src="{{ asset('backend/assets/images/maps/endRoute.png') }}" style="height:20px;width:20px;"> End Point</button>#}
                    {#<button id="bbbbb" type="button" class="btn btn-default btn-hover-me menu_toolbar_tool build_route " data-tool-name="dumpPoint">#}
                        {#<img src="{{ asset('backend/assets/images/maps/dumpPoint.png') }}" style="height:20px;width:20px;"> Dump Point</button>#}
                    <button id="smartBinBBBB" type="button" class="btn btn-default btn-hover-me menu_toolbar_tool build_route " data-tool-name="smartBinPoint">
                        <img src="{{ asset('backend/assets/images/maps/smartBinPoint.png') }}" style="height:20px;width:20px;"> Smart Bin Point</button>
                    {#<button type="button" class="btn btn-default btn-hover-me menu_toolbar_tool" data-tool-name="recyclingPoint">#}
                        {#<img src="{{ asset('backend/assets/images/maps/recyclePoint.png') }}" style="height:20px;width:20px;"> Recycling Point</button>#}
                    <button type="button" class="btn btn-default btn-hover-me menu_toolbar_tool" data-tool-name="deletePoint">
                        <img src="{{ asset('backend/assets/images/maps/holderRemover.png') }}" style="height:20px;width:20px;"> Delete Point</button>

                </div>
            </h2>
        </header>
        <div id="mapModalBody" class="panel-body">
            <div class="modal-wrapper">
                <div class="modal-text">
                    <div id="googleMap" style="min-height:650px;" class=" col-centered panel-body "><span class="close">Close</span></div>
                </div>
            </div>
        </div>
        <footer class="panel-footer">
            <div class="row">
                <div class="col-md-12 text-right">
                    <button class="btn btn-primary modal-confirm" id="map-cnf"  >Confirm</button>
                    <button class="btn btn-default modal-dismiss" id="map-cancel" >Cancel</button>
                </div>
            </div>
        </footer>
    </section>
</div>