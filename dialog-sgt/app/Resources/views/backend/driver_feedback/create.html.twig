{% extends 'backend/base.html.twig' %}
{% trans_default_domain "backend" %}
{% block javascripts %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
    <script type="text/javascript">
        jQuery.validator.addMethod('confirmPwCheck',function (value,element) {
            return value != '' && value == $('#app_bundle_schedule_password').val()
        },'{% trans %}driver_feedback_info_driver_feedback_password_confirm_msg{% endtrans %}');

        validationRules["app_bundle_driver_feedback[passwordConfirm]"] = {confirmPwCheck:true};
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.weekday').select2();
        })
    </script>
{% endblock %}
{% block content %}
    {{ form_start(form,{'attr':{'class':'form-horizontal'}}) }}
    <div class="panel-body">
        <div class="form-group">
            {{ form_label(form.driver ,null,{'label_attr':{'class':'col-md-3 control-label'}}) }}
            <div class="col-md-6">
                {{ form_widget(form.driver,{'attr':{'class':'form-control'}}) }}
                {{ form_errors(form.driver) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.rate ,null,{'label_attr':{'class':'col-md-3 control-label'}}) }}
            <div class="col-md-6">
                {{ form_widget(form.rate,{'attr':{'class':'form-control'}}) }}
                {{ form_errors(form.rate) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.feedback ,null,{'label_attr':{'class':'col-md-3 control-label'}}) }}
            <div class="col-md-6">
                {{ form_widget(form.feedback,{'attr':{'class':'form-control'}}) }}
                {{ form_errors(form.feedback) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.date ,null,{'label_attr':{'class':'col-md-3 control-label'}}) }}
            <div class="col-md-6">
                {{ form_widget(form.date,{'attr':{'class':'form-control'}}) }}
                {{ form_errors(form.date) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.time ,null,{'label_attr':{'class':'col-md-3 control-label'}}) }}
            <div class="col-md-6">
                {{ form_widget(form.time,{'attr':{'class':'form-control'}}) }}
                {{ form_errors(form.time) }}
            </div>
        </div>
    </div>

    <footer class="panel-footer">
        <div class="row">
            <div class="col-sm-9 col-sm-offset-7">
                <a href="{{ path('app_driver_feedback_list') }}" class="btn btn-default">Cancel</a>
                {{ form_widget(form.save,{'attr':{'class':'btn btn-primary'}}) }}
            </div>
        </div>

    </footer>
    {{ form_end(form) }}
    {#{{  form(form, {'attr': {'novalidate': 'novalidate'}}) }}#}
{% endblock %}