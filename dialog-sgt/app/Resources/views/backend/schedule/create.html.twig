{% extends 'backend/base.html.twig' %}
{% trans_default_domain "backend" %}
{% block javascripts %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
    <script type="text/javascript">
        jQuery.validator.addMethod('confirmPwCheck',function (value,element) {
            return value != '' && value == $('#app_bundle_schedule_password').val()
        },'{% trans %}schedule_info_schedule_password_confirm_msg{% endtrans %}');

        validationRules["app_bundle_schedule[passwordConfirm]"] = {confirmPwCheck:true};
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.weekday').select2();
        })
    </script>
{% endblock %}
